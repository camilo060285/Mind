{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mind://schemas/animation_extension.schema.json",
  "title": "Mind Animation Latent Extension v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["story_beats", "scenes", "character_state", "shot_plan"],
  "properties": {
    "story_beats": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "purpose"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "purpose": { "type": "string", "minLength": 1 }
        }
      }
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "summary", "duration_seconds"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "summary": { "type": "string", "minLength": 1 },
          "duration_seconds": { "type": "number", "minimum": 0.1 }
        }
      }
    },
    "character_state": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "motivation", "emotion"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "motivation": { "type": "string", "minLength": 1 },
          "emotion": { "type": "string", "minLength": 1 }
        }
      }
    },
    "shot_plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["scene_id", "camera", "timing"],
        "properties": {
          "scene_id": { "type": "string", "minLength": 1 },
          "camera": { "type": "string", "minLength": 1 },
          "timing": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
